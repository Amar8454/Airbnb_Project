<% if(success && success.length){ %>
<div class="alert alert-success alert-dismissible fade show col-6 offset-3">
  <button
    type="button"
    class="btn-close "
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
  <p><%=success %></p>
</div>
<% } %>

<div>
  <% if(error && error.length){ %>
  <div class="alert alert-danger alert-dismissible fade show col-6 offset-3">
    <button
      type="button"
      class="btn-close "
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
    <p><%=error %></p>
  </div>
  <% } %>
</div>
