<% layout('/Layout/boilerplate') -%>
<body>
  <br />
  <div class="row offset-2">
    <h4>Edit your Post:-</h4>
    <form
      method="POST"
      action="/datalist/<%=editDatalist.id %>?_method=PUT"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
        <input
          type="text"
          class="form-control"
          value="<%=editDatalist.title%>"
          name="datalist[title]"
          required
        />
        <div class="invalid-feedback">Title name should be.</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-lable">Description</label>
        <textarea
          name="datalist[description]"
          class="form-control"
          rows="2"
          cols="22"
          required
        >
        <%=editDatalist.description%></textarea
        >
        <div class="invalid-feedback">Description should be.</div>
      </div>

      <div class="mb-3">
        <h4>Original Image</h4>
        <img src="<%=originalImageUrl  %>" alt="" class="image-src" />
      </div>

      <div class="mb-3">
        <label for="image" class="form-lable"> Upload New Image</label>
        <input
          type="file"
          class="form-control"
          name="datalist[image]"
          required
        />
        <div class="invalid-feedback">Image URL should be.</div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-lable">Price</label>
          <input
            type="text"
            class="form-control"
            value="<%=editDatalist.price%>"
            name="datalist[price]"
            required
          />
          <div class="invalid-feedback">Price should be.</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-lable">Country</label>
          <input
            type="text"
            class="form-control"
            value="<%=editDatalist.country%>"
            name="datalist[country]"
            required
          />
          <div class="invalid-feedback">Location name should be.</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-lable">Location</label>
        <input
          type="text"
          class="form-control"
          value="<%=editDatalist.location%>"
          name="datalist[location]"
          required
        />
        <div class="invalid-feedback">Location name should be.</div>
      </div>
      <button class="submit_btn">Submit Details</button>
    </form>
  </div>
</body>
<script src="/js/index.js"></script>
